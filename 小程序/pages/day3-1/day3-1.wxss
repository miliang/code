/* pages/day3-1/day3-1.wxss */
.header{
  border-left: 3px solid limegreen;
  padding: 15rpx;
  margin: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: baseline
}
.text-all{
  font-size: 14px;
  color: green
}
.content{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-content: space-around;
  width: 100%;

}
.content-item{
  height: 200rpx;
  width: 48%;
  position: relative;
  margin-top: 15rpx;
}
.content-item-text{
  position: absolute;
  bottom: 0px;
  background-color: black;
  opacity: 0.7;
  color: white;
  font-size: 12px;
  width: 96%;
  padding: 20rpx 0 15rpx 15rpx;
}
.content-item image{
  width: 100%;
  height: 100%;
}